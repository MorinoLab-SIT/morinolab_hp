{
  "name": "morinolab-cms-electron",
  "version": "1.0.0",
  "description": "Desktop CMS for managing contents directory without DB (file-based) using Electron and TypeScript.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && cp -R src/renderer dist/renderer",
    "start": "npm run build && electron .",
    "lint": "eslint 'src/**/*.{ts,tsx,js}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,html,css,json,md}'",
    "pack-linux": "npm run build && electron-packager . morinolab_cms --platform=linux --arch=x64 --out=build --overwrite --prune=true --asar",
    "pack-win": "npm run build && electron-packager . morinolab_cms --platform=win32 --arch=x64 --out=build --overwrite --prune=true --asar",
    "pack-mac-x64": "npm run build && electron-packager . morinolab_cms --platform=darwin --arch=x64 --out=build --overwrite --prune=true --asar",
    "pack-mac-arm64": "npm run build && electron-packager . morinolab_cms --platform=darwin --arch=arm64 --out=build --overwrite --prune=true --asar"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^29.3.3",
    "gray-matter": "^4.0.3",
    "papaparse": "^5.5.3",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/node": "^20.9.1",
    "@types/papaparse": "^5.3.16",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "electronmon": "^1.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.1",
    "typescript": "5.4.5",
    "electron-packager": "^17.1.1"
  }
}
