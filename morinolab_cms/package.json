{
  "name": "morinolab-cms-electron",
  "version": "1.0.0",
  "description": "Desktop CMS for managing contents directory without DB (file-based) using Electron and TypeScript.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && cp -R src/renderer dist/renderer",
    "rebuild": "electron-rebuild",
    "start-local": "npm run build && npm run rebuild && electron . --contents=../contents",
    "lint": "eslint 'src/**/*.{ts,tsx,js}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,html,css,json,md}'",
    "package": "npm run build && npm run rebuild && electron-forge package && npm run copy-deps",
    "make": "npm run build && npm run rebuild && electron-forge make && npm run copy-deps-make",
    "copy-deps": "node copy-deps.js",
    "copy-deps-make": "node copy-deps.js $(find out/make -name 'app' -type d | head -1)",
    "start": "npm run build && npx electron . --contents=../contents",
    "dev": "npm run build && npx electron . --contents=../contents --dev"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "gray-matter": "^4.0.3",
    "jimp": "^1.6.0",
    "papaparse": "^5.5.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^3.7.2",
    "@types/jimp": "^0.2.1",
    "@types/node": "^20.9.1",
    "@types/papaparse": "^5.3.16",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "electron": "29.4.6",
    "electronmon": "^1.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.1",
    "typescript": "5.4.5"
  }
}
